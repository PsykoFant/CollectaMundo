<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
	 xmlns:util="http://wixtoolset.org/schemas/v4/wxs/util">
  <Package Name="CollectaMundo" Manufacturer="Claus Petersen" Version="1.0.0.0" UpgradeCode="8bf68e08-8279-4ba0-b9e8-83da785b2203">
	  
	  <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeError)" />
	  
	  <MediaTemplate EmbedCab="yes" />

	  <util:QueryNativeMachine />

	  <Launch
		  Condition='"$(sys.BUILDARCH)" ~= "x64" IMP WIX_NATIVE_MACHINE = 34404'
		  Message="This installation can run only on $(sys.BUILDARCH) machines!" />
	  
    <Feature Id="Main">
      <ComponentGroupRef Id="CollectaMundoComponents" />
    </Feature>
  </Package>
</Wix>
